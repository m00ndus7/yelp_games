<%- include("partials/header") %>
<div class="container">

	<h1>Edit Game</h1>
	
	<form action="/games/<%= game._id %>?_method=put" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title"value="<%=game.title%>">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description"value="<%=game.description%>">
  </div>
	<div class="form-group">
    <label for="creators">Creators</label>
    <input type="text" class="form-control" name="creators"value="<%=game.creators%>">
  </div>
	<div class="form-group">
    <label for="publisher">Publisher</label>
    <input type="text" class="form-control" name="publisher"value="<%=game.publisher%>">
  </div>
	<div class="form-group">
    <label for="date">Release Date</label>
    <input type="date" class="form-control" name="date"value="<%=game.date.toISOString().split("T")[0]%>">
  </div>
	<div class="form-group">
    <label for="genre">Genre</label>
   <select class="form-control" id="genre" name="genre">
	   <option disabled>Choose Below</option>
	   <option <%= game.genre === 'fighting' ? 'selected' : '' %>>Fighting</option>
	   <option <%= game.genre === 'fps' ? 'selected' : '' %>>FPS</option>
	   <option <%= game.genre === 'board-games' ? 'selected' : '' %>>Board-Games</option>
	   <option <%= game.genre === 'puzzle' ? 'selected' : '' %>>Puzzle</option>
	   <option <%= game.genre === 'rpg' ? 'selected' : '' %>>RPG</option>
	   <option <%= game.genre === 'mmo' ? 'selected' : '' %>>MMO</option>
		</select>
  </div>
	<div class="form-group form-check">
   <input type="checkbox" class="form-check-input" name="multiplayer" <%= game.multiplayer ? 'checked' : '' %>>
	<label for="multiplayer">Multiplayer?</label>
  </div>
  <div class="form-group">
    <label for="image">Image</label>
    <input type="text" class="form-control" name="image_link"value="<%=game.image_link%>">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
	
</div>

<%- include("partials/footer") %>